package utils;

public class Locators {
    public static final String CLOSE_LOGIN_POPUP = "button._2KpZ6l._2doB4z"; // CSS selector for closing login popup
    public static final String SEARCH_BOX = "//input[@name='q']"; // XPath for search box
    public static final String SEARCH_BUTTON = "//button[contains(.,'Search Icon')]"; // XPath for search button
    public static final String SORT_PRICE_LOW_TO_HIGH = "//div[text()='Price -- Low to High']"; // XPath for sorting
    public static final String PRICE_ELEMENT = "div._30jeq3._1_WHN1"; // CSS selector for product price
    public static final String NEXT_BUTTON = "//span[normalize-space()='Next']"; // XPath for next button
    public static final String CLICK_SEARCH_FIELD = "//input[@placeholder='Search for Products, Brands and More']"; // XPath to click search field.
    public static final String PRODUCT_LIST = "div._1AtVbE"; // CSS selector for product list container
    public static final String ADD_TO_CART_BUTTON = "//button[contains(text(),'ADD TO CART')]"; // XPath for add to cart button
    public static final String CART_BUTTON = "//span[contains(text(),'Cart')]"; // XPath for cart button
    public static final String CART_PRODUCTS = "div._3I9_wc"; // CSS selector for products in cart
    public static final String PRODUCT_PRICE = "div._30jeq3"; // CSS selector for product price
    public static final String TOTAL_SUM = "div._2d1E78"; // CSS selector for total sum
}

